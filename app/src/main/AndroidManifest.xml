<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eliaschang8.tabsandnavdrawer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/tigermultipurposelogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tigermultipurposelogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Presenter.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".Modler.DesActivity" />
        <activity android:name=".Modler.TestScreen" />
        <activity android:name=".Modler.ArticlePage" />
        <activity
            android:name=".Presenter.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Presenter.SignUpActivity" />
        <activity android:name=".Presenter.ForumActivity" />
        <activity android:name=".Presenter.ImageSelection" />
        <!-- <activity android:name=".Presenter.SplashActivity"></activity> -->
        <activity android:name=".Modler.SavedActivity"></activity>
        <activity android:name=".Presenter.Saved"></activity>
    </application>

</manifest>